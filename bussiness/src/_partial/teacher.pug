mixin teacher(data)
    .relative 
        img(src=data.img, alt="teacher pic" class="hover:scale-95 transition")
        .absolute.flex.flex-col.bottom-12.left-0.right-0.text-white.items-center
            h3.text-2xl.text-center= data.name
            span.mt-4(class="text-[12.5px]")= data.desc
            a.flex.items-center.mb-5.mt-6(class="text-[12.5px]" href="#")
                img(src="./images/arrow.svg", class="w-[15px] h-[15px]" alt="->")
                span.ml-2 More information
