mixin menu()
  .max-w-7xl.mx-auto.px-2(class='md:px-10')
    .relative.flex.items-center.justify-between(class="h-[66px] md:h-[62.5px]")
      .absolute.inset-y-0.right-0.flex.items-center(class='sm:hidden')
        // Mobile menu button
        button#collpse.inline-flex.items-center.justify-center.p-2.text-gray-400(type='button' class='hover:text-white' aria-controls='mobile-menu' aria-expanded='false')
          span.sr-only Open main menu
          img.block(class=" w-[19px] h-[19px]" src="./images/collpse.svg", alt="logo")
      .flex-1.flex.items-center(class='sm:items-stretch sm:justify-start md:justify-between')
        a.flex-shrink-0.flex.items-center(href="#")
          img.block.mr-2(src='./images/logo.svg' class="h-[22.5px] w-auto" alt='logo')
          h1.text-white(class="text-[12.5px] font-semibold") 企业站

        .hidden(class='sm:block sm:ml-6')
          .flex.space-x-20(class="mr-[175] text-[9px]" )
            a.text-gray-300.text-white.px-1.py-2.rounded-md.font-medium(href='index.pug' aria-current='page') 首页
            a.text-gray-300.px-1.py-2.rounded-md.font-medium(href='news.pug' ) 新闻列表页
            a.text-gray-300.px-1.py-2.rounded-md.font-medium(href='about.pug' ) 关于我们
  #mobile-menu.invisible.absolute.h-screen.top-0(class="left-0 right-0 flex justify-end fadeInRight")
    .bg-secondary.h-full(class="w-[248px]")
      svg#close-button.block.h-6.w-6.text-white.absolute.right-2.top-2.padding-4(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='2' stroke='currentColor' aria-hidden='true')
        path(stroke-linecap='round' stroke-linejoin='round' d='M6 18L18 6M6 6l12 12')
