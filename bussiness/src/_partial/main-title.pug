mixin maintitle(data, black)
  .flex.flex-col.items-center
    if black
      span.block.select-none.text-center(class="text-outline")= data.eng
      h1.-mt-16.text-center.text-5xl.text-black= data.title
    else 
      span.block.select-none.text-center(class="text-outline text-outline-black")= data.eng
      h1.-mt-16.text-center.text-5xl.text-white= data.title
    span.block.bg-primary.mt-8.w-32(class="h-1.5")
